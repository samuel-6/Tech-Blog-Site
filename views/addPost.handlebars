<!-- Template for adding a new post. -->

<!-- Link to go back to the dashboard. -->
<a href="/dashboard" class="go-back"> &larr; Go back to the dashboard</a>

<!-- Article section for adding a new post. -->
<article class="new-page">

    <!-- Section for the new post form. -->
    <section class="new-form-page">

        <!-- Heading for the new post form. -->
        <div class="form-heading">

            <h2>Create New Blog Post</h2>

        </div>

        <!-- Form section for adding a new post. -->
        <div class="form-section">

            <!-- New post form. -->
            <form class="new-post-form">

                <!-- Section for the post title. -->
                <div class="post-title-section">

                    <!-- Label and input for the post title. -->
                    <label for="post-title">Title</label>
                    <input type="text" id="post-title" name="post-title" />

                </div>

                <!-- Section for the post content. -->
                <div class="post-content">

                    <!-- Label and textarea for the post content. -->
                    <label for="post-content">Content</label>
                    <textarea class="entry-field" id="post-content" name="post-content"></textarea>

                </div>

                <!-- Submit button for creating the post. -->
                <button type="submit" class="btn">Create</button>

            </form>

        </div>

    </section>
    
</article>

<!-- Script for adding a new post. -->
<script src="../public/js/newPost.js"></script>